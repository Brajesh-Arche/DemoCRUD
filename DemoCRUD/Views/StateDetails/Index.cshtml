@model IEnumerable<DemoCRUD.Models.StateViewModeel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "StateDetails", FormMethod.Get))
{
    <div> @Html.ActionLink("Add New", "StateInsert")<br /></div>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Country")
            </th>
            <th>@Html.DisplayName("State")</th>
            <th></th>
            <th>@Html.DisplayName("Action")</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CountryName
                </td>
                <td>
                    @item.StateName
                </td>
                <td></td>
                <td>
                    @Html.ActionLink("Edit", "EditInsert", "StateDetails", new { id = item.StateId }, htmlAttributes: new { @class = "btn btn-warning btn-large" }) ||
                    @Html.ActionLink("Delete", "StateDelete", "StateDetails", new { id = item.StateId }, htmlAttributes: new { @class = "btn btn-danger btn-large" })

                </td>
            </tr>
        }
    </table>
}
