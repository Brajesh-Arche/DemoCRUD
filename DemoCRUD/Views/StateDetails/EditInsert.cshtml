@model DemoCRUD.StateTable
@{
    ViewBag.Title = "EditInsert";
}

<h2>EditState</h2>

@using (Html.BeginForm("EditInsert", "StateDetails", FormMethod.Post))
{

<div class="form-horizontal">
    <hr />
    @Html.HiddenFor(x => x.StateId)
    <div>
        @Html.Label("Country")
        <div>
            @Html.DropDownListFor(x => x.CountryId, new SelectList(ViewBag.countryList, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div>
        @Html.LabelFor(x => x.StatName)
        <div>
            @Html.EditorFor(x => x.StatName)
        </div>
    </div>
    <br />
    <div>
        <div>
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
    <br />
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

