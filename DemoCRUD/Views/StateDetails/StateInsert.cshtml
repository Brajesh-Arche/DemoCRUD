@model DemoCRUD.StateTable
@{
    ViewBag.Title = "StateInsert";
}

<h2>States</h2>

@using (Html.BeginForm("StateInsert", "StateDetails", FormMethod.Post))
{

<div class="form-horizontal">
    <hr />
    <div>
        @Html.Label("Country Name")
        <div>
            @Html.DropDownListFor(x => x.CountryId, new SelectList(ViewBag.countryList, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div>
        @Html.LabelFor(x=>x.StatName)
        <div>
            @Html.EditorFor(x=>x.StatName)
        </div>
    </div>
    <br />
    <div>
        <div>
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
    <br />
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>