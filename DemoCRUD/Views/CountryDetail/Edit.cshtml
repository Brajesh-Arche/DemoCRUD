@model DemoCRUD.Country

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit","CountryDetail",FormMethod.Post))
{
    
    <div class="form-horizontal">
        <h4>Country</h4>
        <hr />
        @Html.HiddenFor(x=>x.CountryId)
        <div>
            @Html.LabelFor(x => x.CountryName)
            <div>
                @Html.EditorFor(x => x.CountryName)
            </div>
        </div>
        <br />
        <div>
            <div>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
