@model IEnumerable<DemoCRUD.Country>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "CountryDetail", FormMethod.Get))
{
<div> @Html.ActionLink("Add New Country", "Insert")<br /></div>
    <br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Country")
        </th>
        <th></th>
        <th>@Html.DisplayName("Action")</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
               @* @Html.Display(item.CountryName)*@
                @item.CountryName
            </td>
            <td></td>
            <td>
                @Html.ActionLink("Edit", "Edit", "CountryDetail", new { id = item.CountryId }, htmlAttributes: new { @class = "btn btn-warning btn-large" }) || 
                @Html.ActionLink("Delete", "Delete", "CountryDetail", new { id = item.CountryId }, htmlAttributes: new { @class = "btn btn-danger btn-large" })

            </td>
        </tr>
    }
</table>
}
